doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")

    title
      block title

    // STYLES
    link(rel="stylesheet", href="/styles/bootstrap.css")
    link(rel="stylesheet", href="/styles/font-awesome.css")
    link(rel="stylesheet", href="/styles/importer.css")
    link(rel="stylesheet", href="/styles/mapStyles.css")
    // STYLES END

    // TEMPLATES
    
    // TEMPLATES END

  body(ng-app="UserModule")
    .navbar.navbar-inverse.navbar-static-top
      .container
        .navbar-header
          a.navbar-brand(href="/")
            | #{ __("AppBrand") }

        block navbar-content

        if user
          .navbar-btn.btn-group.pull-right(ng-controller="AuthController")
            if !user.is_staff
              a.btn.btn-default(href="/admin")
                | #{ __("UserAction.GoAdminView") }
            a.btn.btn-default(href="/user/#{user.id}")
              | #{ __("UserAction.GoDetailView") }
            button.btn.btn-default(type="button", ng-click="signOut()")
              | #{ __("UserAction.SignOut") }

    block content

    script(src="https://maps.googleapis.com/maps/api/js?libraries=places")
    //script(type='text/ng-template', id='searchbox.html').
      <input type="text" placeholder="Search Box">

    // SCRIPTS
    script(src="/js/dependencies/sails.io.js")
    script(src="/js/dependencies/jquery.js")
    script(src="/js/dependencies/bootstrap.js")
    script(src="/js/dependencies/angular.js")
    script(src="/js/dependencies/lodash.js")
    script(src="/js/dependencies/angular-google-maps.js")
    script(src="/js/modules/user/module.js")
    script(src="/js/maps.js")
    script(src="/js/modules/admin/module.js")
    script(src="/js/modules/business/module.js")
    // SCRIPTS END
