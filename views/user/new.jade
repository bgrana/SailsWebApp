extends ../layout

block title
  | #{ __("User.NewView.Title") }

block navbar-content
  .navbar-form.navbar-right.btn-group
    a.btn.btn-success(href="/")
      | #{ __("UserAction.SignIn") }


block content
  .container
    .page-header
      h1
        | #{ __("SignUpView.Title") }
        small
          |  #{ __("SignUpView.Subtitle") }
    .row
      .col-xs-12.col-sm-8.col-sm-offset-2.col-md-6.col-md-offset-6
        .panel.panel-default
          .panel-body(ng-controller="AuthController")
            include ../includes/user/signup-form.jade
