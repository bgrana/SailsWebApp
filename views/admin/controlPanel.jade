html(ng-app='adminModule')
  head
    meta(charset="utf-8")
    meta(name="viewport",content="width=device-width, initial-scale=1")

    title
      | Administration Panel

    // STYLES
    link(rel="stylesheet", href="/styles/bootstrap.css")
    link(rel="stylesheet", href="/styles/font-awesome.css")
    link(rel="stylesheet", href="/styles/importer.css")
    // STYLES END

  body(ng-controller='AdminController as admin')
    #accordion2.accordion
        .accordion-group
          .accordion-heading
            a.accordion-toggle(data-toggle='collapse', data-parent='#accordion2', href='#collapseOne')
              | #{ __("Admin.Users") }
          #collapseOne.accordion-body.collapse.in
            .accordion-inner
              include ../includes/admin/userList.jade
        .accordion-group
          .accordion-heading
            a.accordion-toggle(data-toggle='collapse', data-parent='#accordion2', href='#collapseOne')
              | #{ __("Admin.Locals") }
          #collapseOne.accordion-body.collapse.in
            .accordion-inner
              include ../includes/admin/localsList.jade
        .accordion-group
          .accordion-heading
            a.accordion-toggle(data-toggle='collapse', data-parent='#accordion2', href='#collapseOne')
              | #{ __("Admin.Business") }
          #collapseOne.accordion-body.collapse.in
            .accordion-inner
              include ../includes/admin/BusinessList.jade

    // SCRIPTS
    script(src="/js/dependencies/sails.io.js")
    script(src="/js/dependencies/jquery.js")
    script(src="/js/dependencies/angular.js")
    script(src="/js/dependencies/bootstrap.js")
    script(src="/js/modules/admin/module.js")
    // SCRIPTS END
